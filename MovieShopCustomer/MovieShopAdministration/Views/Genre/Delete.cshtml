
@{
    ViewBag.Title = "Delete";
}

<h2>Do you want to delete this Genre?</h2>
<form method="post" action="~Genre/DeleteAccepted">
    <input type="hidden" value="@Model" name="genreId" />
    <input type="submit" value="Yes" class="btn btn alert-warning"/>
    @Html.ActionLink("No","Index", null, new object { @class="btn btn-danger" } )
</form>
