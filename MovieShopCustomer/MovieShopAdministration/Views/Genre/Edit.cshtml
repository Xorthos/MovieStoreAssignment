@model Proxy.DomainModels.Genre
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Genre</h2>
<form method="Post" action="~/Genre/Edit" class="col col-md-12">

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "Something went wrong", new { @class = "text-danger" })
    <input type="hidden" class="form-control" name="Id" value="@Model.Id" hidden />
    @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control", @Name = "Name" })
    @Html.ValidationMessageFor(m => m.Name)
    <button type="submit" class="btn btn-default">Save</button>
</form>

