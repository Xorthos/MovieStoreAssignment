@model MovieShopAdministration.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th> Title</th>
            <th>Price</th>
            <th>Year</th>
            <th>Genre</th>
           
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Year</td>
                <td>@item.Genre.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Movie", new { movieId = @item.Id }, new { @class = "btn btn-success" })
                   @Html.ActionLink("Delete", "Delete", "Movie", new { movieId = @item.Id }, new { @class = "btn btn-danger" })

            </td>
        </tr>
        }
    </tbody>
    </table>
