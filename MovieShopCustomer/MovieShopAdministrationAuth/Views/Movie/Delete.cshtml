@model Proxy.DomainModels.Movie

@{
    ViewBag.Title = "Delete";
}

<h2>Do you want to delete this movie?</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th> Title</th>
            <th>Price</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Cover</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Title</td>
            <td>@Model.Price</td>
            <td>@Model.Year</td>
            <td>@Model.Genre.Name</td>
            <td><img src="@Model.ImgUrl" width="100" height="150" /></td>
        </tr>
    </tbody>
</table>

<form method="post" action="~/Movie/DeleteAccepted">
    <input type="hidden" value="@Model.Id" name="MovieId"/>
    <input type="submit" value="Yes" class="btn btn-warning"/>
    @Html.ActionLink("No", "Index",null, new { @class="btn btn-danger" })
 </form>




