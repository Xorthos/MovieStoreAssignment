@model MovieShopAdministrationAuth.Models.IndexViewModelHomeMade
@{
    ViewBag.Title = "Index";
}

<h2>Genre</h2>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Genre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Genres)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td> @Html.ActionLink("Edit", "Edit", "Genre", new { genreId = @item.Id }, new { @class = "btn btn-success" })</td>
</tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Create new Genre", "Create", null, new { @class = "btn btn-default preview-add-button" })
        </div>
    </div>
