@model List<Proxy.DomainModels.Movie>
    
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped table-condensed">
<thead>
    <tr>
    <th> Title</th>
    <th>Price</th>
    <th>Year</th>
    <th>Genre</th>
    <th>ImgUrl</th>
    <th>TrailerUrl</th>
    </tr>

</thead> 
    <tbody>
        @foreach (var item in Model) {
            <tr>
            <td>@item.Price</td>
            <td>@item.Year</td>
            <td>@item.Genre.Name</td>
            <td>@item.ImgUrl</td>
            <td>@item.TrailerUrl</td>
            <td>@Html.ActionLink("Edit","Edit", new { movieId= @item.Id})
                @Html.ActionLink("Delete","Delete", new { movieId = @item.Id })
            </td>
            </tr>
        }
    </tbody>   

</table>

